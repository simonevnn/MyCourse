<!--Il trattino basso nel nome è puramente una convenzione-->
<!DOCTYPE html>
<html>
<head>
    <title>Elenco dei corsi</title>
    <!--Inseriamo i contenuti di bootstrap per rendere il sito più carino-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="~/logo.svg" height="30px"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a> <!--Grazie agli attributi asp possiamo organizzare il router in maniera dinamica, senza utilizzare delle stringhe statiche-->
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link active" asp-action="Index" asp-controller="Courses">Catalogo Corsi</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">  
        @RenderBody()   <!--In questo modo l'engine Razor sa di dover inserire il contenuto della pagina particolare-->
    </div>


    <footer>
        <p>Contattaci al numero ...</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/c0f6728e89.js" crossorigin="anonymous"></script>
</body>
</html>